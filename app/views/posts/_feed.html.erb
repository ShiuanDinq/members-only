<div class="column is-half">

  <% @posts.each do |post| %>
    <%= link_to post do %>
      <div style="margin-bottom: 1rem" class="box">
        <article class="media columns ">
          <% if user_signed_in? %>
            <figure style="max-width: 64px" class="media-left">
              <p class="image is-64x64">
                <% if post.user.avatar.attached? %>
                  <img style="height:64px;width:64px;object-fit:cover;object-position:top;border-radius:1rem;" src="<%=(url_for(post.user.avatar))%>">
                <% else %>
                  <img style="border-radius: 1rem;" src="https://bulma.io/images/placeholders/64x64.png">
                <% end %>
              </p>
              <strong><%= post.user.name %></strong>
              <br>
              <small><%= post.user.username %></small>
            </figure>

          <% end %>
          <div style="display: flex; min-height: 10rem;flex-direction: column; justify-content: space-between;" class="media-content ">
            <div class="content is-size-3 ">
              <%= post.title %>
            </div>

            <div style="display:flex;">
              <% if current_user == post.user %>
                <div style="margin-right: 1rem;">
                  <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?"} do %>
                    <%= fa_icon "trash" %>
                  <% end %>
                </div>

                <div>
                  <%= link_to edit_post_path(post) do %>
                    <%= fa_icon "edit" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </article>
      </div>
    <% end %>
  <% end %>
</div>


