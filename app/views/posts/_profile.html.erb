<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <div class="image is-128x128">
        <% if current_user.avatar.attached? %>
          <img style="height:128px;width:128px;object-fit:cover;object-position:top;border-radius:1rem;" src="<%=(url_for(current_user.avatar))%>">
        <% else %>
          <img style="border-radius: 1rem;" src="https://bulma.io/images/placeholders/64x64.png">
        <% end %>
      </div>
      <div>
      <strong><%= current_user.name %></strong>
      <small><%= current_user.username %></small>

      <p>published posts: <%= current_user.posts.count %></p>
      </div>
    </figure>
    <div class="media-content">
      <div class="content">
        <%= render 'form' %>
      </div>
    </div>
  </article>

</div>

